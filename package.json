{
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "js:lint": "standard",
    "js:lint:fix": "standard --fix",
    "scss:lint": "stylelint 'app/assets/stylesheets/**/*.scss'",
    "scss:lint:fix": "stylelint 'app/assets/stylesheets/**/*.scss' --fix",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --coverage",
    "build:redoc": "esbuild app/javascript/redoc.js --bundle --sourcemap --outfile=app/assets/builds/redoc.js --loader:.js=jsx",
    "build:app": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --loader:.js=jsx",
    "build": "npm run build:app && npm run build:redoc",
    "build:css": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules --load-path=. --quiet-deps"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-react": "^7.24.1",
    "@ministryofjustice/frontend": "^2.1.3",
    "accessible-autocomplete": "^3.0.0",
    "esbuild": "^0.21.3",
    "govuk-country-and-territory-autocomplete": "^1.0.2",
    "govuk-frontend": "^5.3.1",
    "jquery": "^3.7.1",
    "mobx": "^6.1.0",
    "rails-ujs": "^5.2.8",
    "sass": "^1.77.2",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "esbuild-jest": "^0.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "standard": "^17.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-gds": "^1.1.1",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-scss": "^5.3.2"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  },
  "license": "MIT",
  "packageManager": "yarn@4.0.1"
}
