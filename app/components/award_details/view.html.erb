<%= render SummaryCard::View.new(
  title: "#{trainee.award_type} details",
  rows: [
    {
      key: "Award date",
      value: award_date,
      action_visually_hidden_text: 'award date',
    },
  ]
) do |component| %>
  <% component.header_actions do %>
    <% if show_remove_qts_link? %>
      <%= govuk_link_to(
        "Remove QTS award",
        edit_trainee_undo_awards_dqt_check_path(@trainee),
      ) %>
    <% end %>
  <% end %>
<% end %>
