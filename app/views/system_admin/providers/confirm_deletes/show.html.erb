<%= render PageTitle::View.new(
  text: t("views.confirm_delete.heading", record_type: t(:provider)),
) %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLinkComponent.new(text: I18n.t("back"), href: edit_provider_path(@provider)) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
      <span class="govuk-caption-l"><%= @provider.name %></span>
      <h1 class="govuk-heading-l govuk-!-margin-bottom-8"><%= t("views.confirm_delete.heading", record_type: t(:provider)) %></h1>
      <%= render GovukComponent::WarningTextComponent.new(text: t("views.confirm_delete.user_removal_warning")) %>

  </div>
</div>

<%= govuk_button_to t("views.confirm_delete.delete_button", record_type: t(:provider)),
                    provider_path(@provider),
                    {
                      warning: true,
                      method: :delete,
                    } %>

<p class="govuk-body"><%= govuk_link_to(t("views.forms.common.cancel_and_return_to_record"), edit_provider_path(@provider)) %></p>
