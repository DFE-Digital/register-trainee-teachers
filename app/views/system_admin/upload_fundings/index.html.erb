<% page_title = "Upload funding information" %>

<%= render PageTitle::View.new(text: page_title) %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLinkComponent.new(text: "Home", href: root_path) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <span class="govuk-caption-l">Support for Register</span>
    <h1 class="govuk-heading-xl"><%= page_title %>
    </h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <p class="govuk-body">Funding information for all providers and lead schools can be uploaded into Register at the beginning of every month.</p>
    <p class="govuk-body">There are 4 x CSV files to upload separately:</p>

    <ol class="govuk-list govuk-list--number">
      <li>lead school funding payments</li>
      <li>lead school trainee funding payments</li>
      <li>provider funding payments</li>
      <li>provider trainee funding payments</li>
    </ol>

    <p class="govuk-body">After the funding information has been uploaded, lead schools and providers can download or view:</p>

    <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-9">
      <li>a CSV file by academic year</li>
      <li>payments by month</li>
      <li>running totals</li>
      <li>predicted payments</li>
      <li>payment types</li>
    </ul>

<%= govuk_table do |table|
    table.with_caption(size: 'm', text: 'Lead schools')

    table.with_head do |head|
      head.with_row do |row|
        row.with_cell(text: "Task")
        row.with_cell(text: "Last completed")
        row.with_cell(text: "For month")
      end
    end

    table.with_body do |body|
      body.with_row do |row|
        row.with_cell(text: govuk_link_to("Upload trainee summary", "#"))
        row.with_cell(text: "15 December 2023")
        row.with_cell(text: "November")
      end
      body.with_row do |row|
        row.with_cell(text: govuk_link_to("Upload payment schedule", "#"))
        row.with_cell(text: "Never completed")
        row.with_cell
      end
    end
  end %>

<%= govuk_table do |table|
    table.with_caption(size: 'm', text: 'Providers')

    table.with_head do |head|
      head.with_row do |row|
        row.with_cell(text: "Task")
        row.with_cell(text: "Last completed")
        row.with_cell(text: "For month")
      end
    end

    table.with_body do |body|
      body.with_row do |row|
        row.with_cell(text: govuk_link_to("Upload trainee summary", "#"))
        row.with_cell(text: "10 December 2023")
        row.with_cell(text: "November")
      end
      body.with_row do |row|
        row.with_cell(text: govuk_link_to("Upload payment schedule", "#"))
        row.with_cell(text: "10 December 2023")
        row.with_cell(text: "November")
      end
    end
  end %>
