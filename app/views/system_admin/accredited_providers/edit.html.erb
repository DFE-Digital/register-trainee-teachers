<div class="govuk-form-group">
  <label class="govuk-label" for="sort"><%= @trainee.full_name %></label>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <%= register_form_with model: @trainee do |f| %>

        <%= f.govuk_error_summary %>

        <h1 class="govuk-heading-l">Change accredited provider</h1>

        <p><%= f.govuk_select(:provider, @providers.map(&:name).sort, label: { text: "New accredited provider", size: "s" }, width: 20, autocomplete: :enabled, class: 'provider-select') %></p>

        <%= f.govuk_submit %>
      <% end %>
    </div>
  </div>
</div>
