<%= render PageTitle::View.new(i18n_key: "users.edit", has_errors: @user.errors.present?) %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: t("back"),
    href: lead_school_path(@lead_school),
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= register_form_with model: [@lead_school, @user], url: lead_school_user_path(@lead_school, @user), local: true do |f| %>

      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        Edit user <%= @user.name %>
      </h1>

      <%= f.govuk_text_field :email, label: { text: "Email address", size: "s" }, width: 20, autocomplete: :disabled, maxlength: 255 %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
