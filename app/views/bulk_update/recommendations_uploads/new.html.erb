<%= render PageTitle::View.new(
  text: "Choose who to recommend for QTS or EYTS",
  has_errors: @recommendations_upload_form.errors.present?,
  ) %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLinkComponent.new(text: "Home", href: root_path) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= register_form_with(model: @recommendations_upload_form, url: bulk_update_recommendations_uploads_path) do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        <span class="govuk-caption-xl">Bulk recommend</span>
        Choose who to recommend for QTS or EYTS
      </h1>

      <% if bulk_recommend_count.zero? %>
        <%= render("no_trainees") %>
      <% else %>
        <%= render("upload_trainees", f:) %>
      <% end %>
    <% end %>
  </div>
</div>
