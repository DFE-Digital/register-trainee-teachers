<%= render PageTitle::View.new(i18n_key: "trainees.trainee_start_date.edit", has_errors: @trainee_start_date_form.errors.present?) %>

<%= content_for(:breadcrumbs) do %>
  <%= render DynamicBackLink::View.new(@trainee, text: t(:back)) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= register_form_with(model: @trainee_start_date_form, url: trainee_start_date_path, local: true) do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.hidden_field :context, value: params[:context] %>

      <%= render TraineeName::View.new(@trainee) %>
      <%= f.govuk_date_field :commencement_date, legend: {
        text: t("views.forms.start_dates.commencement_date.label").html_safe, size: "l", tag: "h1"
      }, hint: {
        text: t("views.forms.start_dates.commencement_date.hint",
                itt_start_date: @trainee.itt_start_date.strftime("%d %m %Y")).html_safe } %>
      <%= f.govuk_submit "Continue" %>
    <% end %>

    <p class="govuk-body"><%= govuk_link_to(t("views.forms.common.cancel_and_return_to_record"), trainee_path(@trainee)) %></p>
  </div>
</div>
