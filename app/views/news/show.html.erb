<%= render PageTitle::View.new(i18n_key: "news") %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: t("back"),
    href: news_index_path,
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= render NewsArticle::View.new(news_article: @news_article) %>
  </div>
  <div class="govuk-grid-column-one-third-from-desktop govuk-!-padding-top-2" style="border-top: 2px solid #1d70b8">
    <h2 class="govuk-heading-s govuk-!-margin-bottom-2"><%= t("news.show.related_links") %></h2>
    <%= govuk_link_to "Get help using Register", guidance_path %>
  </div>
</div>
