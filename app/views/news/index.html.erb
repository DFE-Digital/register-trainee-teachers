<%= render PageTitle::View.new(i18n_key: "news") %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: t("back"),
    href: root_path,
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <h1 class="govuk-heading-xl"><%= t(".heading") %></h1>

    <ul class="govuk-list app-list--dash govuk-!-margin-bottom-8 govuk-!-margin-left-3">
      <% @news_articles.each do |article| %>
        <li><a class="govuk-link" href="<%= news_path(article.slug) %>"><%= article.title %></a></li>
      <% end %>
    </ul>
  </div>
</div>
